<!DOCTYPE html>
<html>
  <head>
    <title>FirstApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	<div class="content">
		<div id="top">
			<div class="topright">
			 	<a href="#"><img src="/assets/sitemap.png" alt="Sitemap" /></a> ^ 
			 	<a href="#"><img src="/assets/rss.png" alt="RSS" /></a>				
			</div>
		</div>
		<div id="header">
			
			<div class="headings">
				<h1>My App</h1>
				<h2>First Rails App</h2>
			</div>
		</div>
	
			<div id="menu">
			  	<ul>
					<li><a href="#">Home</a></li>
					<li><a href="#">About Us</a></li>
					<li><a href="#">Contact</a></li>
					<% if session[:admin] %>
					<li><a href="/admin/logout">Admin Logout</a></li>
      				<% else %>
					<li><a href="/admin/login">Admin Login</a></li>
					<% end %>
      				<li><a href="#">link.six</a></li>
      			</ul>
			</div>	
			
		
		<div id="main">
			<div class="right">
				
				
				<div class="nav">
				<h2>Right Column</h2>
				<div class="text">
				</div>
				<h2>More Links?</h2>
					
				</div>
			</div>
			<div class="left">
				<%= yield %>
			</div>
			
		</div>
		
		<div id="footer">
			<div class="info">
				&copy; 2023 
        MyApp<br />
			</div>
		</div>
	</div>
  </body>
</html>
